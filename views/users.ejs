<% layout('layout.ejs') %>

<div class="card mb-4">
  <% include ./partials/messages %> 
  <div class="card-header">
    <i class="fas fa-table mr-1"></i>
      Users Table
  </div>
  <div class="card-body">
      <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>First Name</th>
                  <th>Last Name </th>
                  <th>Email</th>
                  <th>Account verified</th>
                  <th>Join Us</th>
                  <th>Action</th>
              </tr>
              </thead>
              <!-- <tfoot>
                <tr>
                  <th>First Name</th>
                  <th>Last Name </th>
                  <th>Email</th>
                  <th>Account verified</th>
                  <th>Join Us</th>
                </tr>
              </tfoot> -->
              <tbody>
                <% users.forEach((user) => { %>
                  <tr>
                      <td><%= user.firstName %></td>
                      <td><%= user.lastName %></td>
                      <td><%= user.email %></td>
                      <td><%= user.verified %></td>
                      <td><%= moment(user.createdAt).format('Do MMMM, YYYY'); %></td>
                      <td><i class="fa fa-trash" aria-hidden="true"></i> <i class="fa fa-pencil-square-o" aria-hidden="true"></i> </td>
                  </tr>
                <% }); %>
              </tbody>
          </table>
      </div>
  </div>
</div>
